#!/bin/bash

# Аргументы: $1=user $2=domain $3=title $4=admin_user $5=admin_pass $6=admin_email
USER=$1
DOMAIN=$2
TITLE=$3
ADMIN_USER=$4
ADMIN_PASS=$5
ADMIN_EMAIL=$6

# Проверка аргументов
if [ -z "$USER" ] || [ -z "$DOMAIN" ] || [ -z "$TITLE" ] || [ -z "$ADMIN_USER" ] || [ -z "$ADMIN_PASS" ] || [ -z "$ADMIN_EMAIL" ]; then
    echo "Error: Missing required arguments"
    echo "Usage: $0 <user> <domain> <title> <admin_user> <admin_pass> <admin_email>"
    exit 1
fi

# Пути и переменные БД
WEB_PATH="/home/$USER/web/$DOMAIN/public_html"

# Создаем КОРОТКИЕ имена для БД с уникальным префиксом
DOMAIN_SHORT=$(echo "$DOMAIN" | sed 's/[^a-zA-Z0-9]/_/g' | cut -c1-15)
TIMESTAMP=$(date +%s | tail -c 4)  # Последние 3 цифры timestamp
DB_NAME="${DOMAIN_SHORT}_${TIMESTAMP}_wp"

# Создаем ОЧЕНЬ КОРОТКОЕ имя пользователя БД
DOMAIN_HASH=$(echo "$DOMAIN$TIMESTAMP" | md5sum | cut -c1-8)
DB_USER="wp${DOMAIN_HASH}"

# Генерируем отдельный пароль для БД
DB_PASS=$(openssl rand -base64 16 | tr -d '/+=' | cut -c1-12)

# Логирование
LOG_FILE="/var/log/hestia/wp-install.log"

# Функция для выполнения Hestia команд
execute_hestia_cmd() {
    local cmd="$1"
    shift
    /usr/local/hestia/bin/"$cmd" "$@" 2>&1
    return $?
}

# Функция для выполнения MySQL команд
execute_mysql() {
    local query="$1"
    if [ -f "/etc/mysql/debian.cnf" ]; then
        mysql --defaults-file=/etc/mysql/debian.cnf -e "$query" 2>/dev/null
    elif [ -n "$MYSQL_ROOT_PASSWORD" ]; then
        mysql -u root -p"$MYSQL_ROOT_PASSWORD" -e "$query" 2>/dev/null
    else
        mysql -u root -e "$query" 2>/dev/null
    fi
    return $?
}

# Функция для генерации случайного пароля
generate_password() {
    local length=${1:-16}
    openssl rand -base64 32 | tr -d '/+=' | cut -c1-$length
}

# Проверяем, существует ли пользователь Hestia
USER_EXISTS=false
if execute_hestia_cmd v-list-user "$USER" json >/dev/null 2>&1; then
    USER_EXISTS=true
    echo "User $USER already exists" >> "$LOG_FILE"
else
    echo "User $USER does not exist, creating..." >> "$LOG_FILE"
    
    # Создаем пользователя Hestia
    USER_PASSWORD=$(generate_password 16)
    USER_EMAIL="admin@$DOMAIN"
    
    # Пытаемся создать пользователя
    CREATE_USER_RESULT=$(execute_hestia_cmd v-add-user "$USER" "$USER_PASSWORD" "$USER_EMAIL" "default" "$USER")
    if [ $? -ne 0 ]; then
        echo "Error: Failed to create user $USER: $CREATE_USER_RESULT"
        exit 1
    fi
    
    echo "User $USER created successfully" >> "$LOG_FILE"
    USER_EXISTS=true
fi

# Проверяем, что пользователь теперь существует
if [ "$USER_EXISTS" = false ]; then
    echo "Error: User $USER still does not exist after creation attempt"
    exit 1
fi

# Проверяем, существует ли домен у какого-либо пользователя
EXISTING_USER=""
USERS_LIST=$(execute_hestia_cmd v-list-users json | jq -r 'keys[]' 2>/dev/null)

for existing_user in $USERS_LIST; do
    if [ -n "$existing_user" ]; then
        # Проверяем домен у пользователя
        DOMAIN_CHECK=$(execute_hestia_cmd v-list-web-domain "$existing_user" "$DOMAIN" json 2>/dev/null)
        if [ $? -eq 0 ] && [ -n "$DOMAIN_CHECK" ]; then
            EXISTING_USER="$existing_user"
            break
        fi
    fi
done

# Если домен найден у другого пользователя, удаляем его
if [ -n "$EXISTING_USER" ]; then
    echo "Domain $DOMAIN found at user $EXISTING_USER, removing..." >> "$LOG_FILE"
    
    # Удаляем web домен
    execute_hestia_cmd v-delete-web-domain "$EXISTING_USER" "$DOMAIN" >/dev/null 2>&1

    # Удаляем DNS зону если существует
    execute_hestia_cmd v-delete-dns-domain "$EXISTING_USER" "$DOMAIN" >/dev/null 2>&1

    # Удаляем mail домен если существует
    execute_hestia_cmd v-delete-mail-domain "$EXISTING_USER" "$DOMAIN" >/dev/null 2>&1

    sleep 2 # Ждем завершения удаления
fi

# Создаем домен БЕЗ DNS и email
echo "Creating domain $DOMAIN for user $USER..." >> "$LOG_FILE"
CREATE_RESULT=$(execute_hestia_cmd v-add-web-domain "$USER" "$DOMAIN")
if [ $? -ne 0 ]; then
    echo "Error: Failed to create domain: $CREATE_RESULT"
    exit 1
fi

# Устанавливаем прокси-шаблон tc-nginx-only
echo "Setting proxy template tc-nginx-only for domain $DOMAIN..." >> "$LOG_FILE"
PROXY_RESULT=$(execute_hestia_cmd v-change-web-domain-proxy-tpl "$USER" "$DOMAIN" "tc-nginx-only")
if [ $? -ne 0 ]; then
    echo "Warning: Failed to set proxy template tc-nginx-only: $PROXY_RESULT" >> "$LOG_FILE"
else
    echo "Proxy template tc-nginx-only set successfully" >> "$LOG_FILE"
fi

# Устанавливаем прокси-шаблон tc-nginx-only
echo "Setting proxy template tc-nginx-only for domain $DOMAIN..." >> "$LOG_FILE"
PROXY_RESULT=$(execute_hestia_cmd v-change-web-domain-proxy-tpl "$USER" "$DOMAIN" "tc-nginx-only")
if [ $? -ne 0 ]; then
    echo "Warning: Failed to set proxy template tc-nginx-only: $PROXY_RESULT" >> "$LOG_FILE"
else
    echo "Proxy template tc-nginx-only set successfully" >> "$LOG_FILE"
fi

# Проверяем создание директории
WEB_PATH="/home/$USER/web/$DOMAIN/public_html"
if [ ! -d "$WEB_PATH" ]; then
    echo "Error: Directory not found: $WEB_PATH"
    exit 1
fi

# Проверка, установлен ли WP CLI
if ! command -v wp &> /dev/null; then
    echo "Error: WP CLI not found"
    exit 1
fi

# Переходим в директорию
cd "$WEB_PATH" || { echo "Error: Cannot change to $WEB_PATH"; exit 1; }

# Удаляем все файлы в директории
echo "Cleaning directory $WEB_PATH..." >> "$LOG_FILE"
rm -rf "$WEB_PATH"/*
rm -rf "$WEB_PATH"/.*  2>/dev/null || true

# ТОТАЛЬНАЯ ОЧИСТКА БД
echo "Cleaning existing database $DB_NAME..." >> "$LOG_FILE"
echo "DB will be: $DB_NAME, User will be: $DB_USER" >> "$LOG_FILE"

# Проверяем у всех пользователей HestiaCP
USERS_LIST=$(execute_hestia_cmd v-list-users json | jq -r 'keys[]' 2>/dev/null)
for check_user in $USERS_LIST; do
    if [ -n "$check_user" ]; then
        execute_hestia_cmd v-delete-database "$check_user" "$DB_NAME" >/dev/null 2>&1
    fi
done

# Удаляем через прямой MySQL
execute_mysql "DROP DATABASE IF EXISTS \`$DB_NAME\`;" >/dev/null 2>&1
execute_mysql "DROP USER IF EXISTS '$DB_USER'@'localhost';" >/dev/null 2>&1
execute_mysql "FLUSH PRIVILEGES;" >/dev/null 2>&1

sleep 2

# Создание базы данных через HestiaCP
echo "Creating database $DB_NAME via HestiaCP..." >> "$LOG_FILE"
echo "Final DB Name: $DB_NAME (${#DB_NAME} chars)" >> "$LOG_FILE"
echo "Final DB User: $DB_USER (${#DB_USER} chars)" >> "$LOG_FILE"

DB_CREATE_RESULT=$(execute_hestia_cmd v-add-database "$USER" "$DB_NAME" "$DB_USER" "$DB_PASS" "mysql" 2>&1)
if [ $? -ne 0 ]; then
    # Проверяем, говорит ли что БД уже существует
    if echo "$DB_CREATE_RESULT" | grep -q "already exists"; then
        echo "Database $DB_NAME already exists, will clean and use it" >> "$LOG_FILE"
        
        # Пробуем подключиться к существующей БД и очистить её
        echo "Attempting to clean existing database..." >> "$LOG_FILE"
        
        # Создаем нового пользователя для существующей БД
        execute_mysql "DROP USER IF EXISTS '$DB_USER'@'localhost';" >/dev/null 2>&1
        execute_mysql "CREATE USER '$DB_USER'@'localhost' IDENTIFIED BY '$DB_PASS';" >/dev/null 2>&1
        execute_mysql "GRANT ALL PRIVILEGES ON \`$DB_NAME\`.* TO '$DB_USER'@'localhost';" >/dev/null 2>&1
        execute_mysql "FLUSH PRIVILEGES;" >/dev/null 2>&1
        
        # Очищаем все таблицы в БД
        TABLES=$(mysql -u "$DB_USER" -p"$DB_PASS" -h localhost "$DB_NAME" -e "SHOW TABLES;" 2>/dev/null | grep -v "Tables_in_" | tr '\n' ' ')
        if [ -n "$TABLES" ]; then
            for table in $TABLES; do
                if [ -n "$table" ]; then
                    echo "Dropping table: $table" >> "$LOG_FILE"
                    mysql -u "$DB_USER" -p"$DB_PASS" -h localhost "$DB_NAME" -e "DROP TABLE IF EXISTS \`$table\`;" >/dev/null 2>&1
                fi
            done
            echo "Existing database cleaned successfully" >> "$LOG_FILE"
        fi
        
        echo "Database prepared successfully" >> "$LOG_FILE"
    else
        echo "Error: Failed to create database via HestiaCP: $DB_CREATE_RESULT" >> "$LOG_FILE"
        echo "Error: Failed to create database via HestiaCP: $DB_CREATE_RESULT"
        exit 1
    fi
else
    echo "Database created successfully via HestiaCP" >> "$LOG_FILE"
fi

# Тест подключения к БД с несколькими попытками
echo "Testing database connection..." >> "$LOG_FILE"

# Ждем активации БД
sleep 3

DB_CONNECTION_SUCCESS=false
for attempt in {1..5}; do
    echo "Connection attempt $attempt..." >> "$LOG_FILE"
    DB_TEST=$(mysql -u "$DB_USER" -p"$DB_PASS" -h localhost -e "SELECT 1;" "$DB_NAME" 2>&1)
    if [ $? -eq 0 ]; then
        echo "Database connection successful on attempt $attempt" >> "$LOG_FILE"
        DB_CONNECTION_SUCCESS=true
        break
    else
        echo "Connection attempt $attempt failed: $DB_TEST" >> "$LOG_FILE"
        if [ $attempt -lt 5 ]; then
            echo "Waiting 2 seconds before retry..." >> "$LOG_FILE"
            sleep 2
        fi
    fi
done

if [ "$DB_CONNECTION_SUCCESS" = false ]; then
    echo "Database connection failed after 5 attempts, trying to fix..." >> "$LOG_FILE"
    
    # Попробуем пересоздать пользователя БД
    echo "Recreating database user..." >> "$LOG_FILE"
    execute_mysql "DROP USER IF EXISTS '$DB_USER'@'localhost';" >/dev/null 2>&1
    execute_mysql "CREATE USER '$DB_USER'@'localhost' IDENTIFIED BY '$DB_PASS';" >/dev/null 2>&1
    execute_mysql "GRANT ALL PRIVILEGES ON \`$DB_NAME\`.* TO '$DB_USER'@'localhost';" >/dev/null 2>&1
    execute_mysql "FLUSH PRIVILEGES;" >/dev/null 2>&1
    
    # Еще одна попытка
    sleep 3
    DB_TEST_FINAL=$(mysql -u "$DB_USER" -p"$DB_PASS" -h localhost -e "SELECT 1;" "$DB_NAME" 2>&1)
    if [ $? -ne 0 ]; then
        echo "Error: Database connection still failed: $DB_TEST_FINAL" >> "$LOG_FILE"
        echo "Error: Database connection failed"
        exit 1
    else
        echo "Database connection successful after user recreation" >> "$LOG_FILE"
    fi
fi

# Скачивание WordPress
echo "Downloading WordPress..." >> "$LOG_FILE"
WP_DOWNLOAD_RESULT=$(sudo -u "$USER" wp core download --allow-root --path="$WEB_PATH" 2>&1)
if [ $? -ne 0 ]; then
    echo "Error: Failed to download WordPress: $WP_DOWNLOAD_RESULT" >> "$LOG_FILE"
    echo "Error: Failed to download WordPress"
    exit 1
fi

# Создание конфига с подробным логированием
echo "Creating wp-config.php..." >> "$LOG_FILE"
echo "Config will use: DB=$DB_NAME, User=$DB_USER, Pass=[HIDDEN]" >> "$LOG_FILE"

# Проверяем права на директорию
if [ ! -w "$WEB_PATH" ]; then
    echo "No write permissions to $WEB_PATH, fixing..." >> "$LOG_FILE"
    chown -R "$USER":"$USER" "$WEB_PATH"
    chmod 755 "$WEB_PATH"
fi

# Проверяем, что WordPress файлы существуют
if [ ! -f "$WEB_PATH/wp-config-sample.php" ]; then
    echo "Error: wp-config-sample.php not found in $WEB_PATH" >> "$LOG_FILE"
    echo "Error: WordPress files not found"
    exit 1
fi

# Еще один тест БД перед созданием конфига
echo "Final DB connection test before wp-config..." >> "$LOG_FILE"
DB_PRE_CONFIG_TEST=$(mysql -u "$DB_USER" -p"$DB_PASS" -h localhost -e "SELECT 1;" "$DB_NAME" 2>&1)
if [ $? -ne 0 ]; then
    echo "Error: DB connection failed before wp-config: $DB_PRE_CONFIG_TEST" >> "$LOG_FILE"
    echo "Error: Database connection failed before wp-config"
    exit 1
fi

# Создаем конфиг
WP_CONFIG_RESULT=$(sudo -u "$USER" wp config create \
    --dbname="$DB_NAME" \
    --dbuser="$DB_USER" \
    --dbpass="$DB_PASS" \
    --dbhost="localhost" \
    --dbprefix="wp_" \
    --allow-root --path="$WEB_PATH" 2>&1)

if [ $? -ne 0 ]; then
    echo "Error: Failed to create wp-config.php: $WP_CONFIG_RESULT" >> "$LOG_FILE"
    echo "Trying to create wp-config.php manually..." >> "$LOG_FILE"
    
    # Создаем wp-config.php вручную
    sudo -u "$USER" cp "$WEB_PATH/wp-config-sample.php" "$WEB_PATH/wp-config.php"
    
    # Заменяем параметры БД
    sudo -u "$USER" sed -i "s/database_name_here/$DB_NAME/g" "$WEB_PATH/wp-config.php"
    sudo -u "$USER" sed -i "s/username_here/$DB_USER/g" "$WEB_PATH/wp-config.php"
    sudo -u "$USER" sed -i "s/password_here/$DB_PASS/g" "$WEB_PATH/wp-config.php"
    sudo -u "$USER" sed -i "s/localhost/localhost/g" "$WEB_PATH/wp-config.php"
    
    # Проверяем что файл создался
    if [ ! -f "$WEB_PATH/wp-config.php" ]; then
        echo "Error: Failed to create wp-config.php manually" >> "$LOG_FILE"
        echo "Error: Failed to create wp-config.php"
        exit 1
    fi
    
    echo "wp-config.php created manually" >> "$LOG_FILE"
else
    echo "wp-config.php created successfully via WP CLI" >> "$LOG_FILE"
fi

# Добавляем дополнительные настройки в wp-config.php
sudo -u "$USER" wp config set WP_DEBUG false --raw --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp config set WP_DEBUG_LOG false --raw --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp config set WP_DEBUG_DISPLAY false --raw --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp config set DISALLOW_FILE_EDIT true --raw --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp config set AUTOMATIC_UPDATER_DISABLED true --raw --allow-root --path="$WEB_PATH" >/dev/null 2>&1

# Добавляем поддержку HTTPS через прокси
sudo -u "$USER" sed -i '/\/\* That'"'"'s all, stop editing!/i\
\
// HTTPS за прокси (например, CloudFlare)\
if (isset($_SERVER['\''HTTP_X_FORWARDED_PROTO'\'']) && $_SERVER['\''HTTP_X_FORWARDED_PROTO'\''] == '\''https'\'') {\
    $_SERVER['\''HTTPS'\''] = '\''on'\'';\
}' "$WEB_PATH/wp-config.php"

# Установка WordPress
echo "Installing WordPress..." >> "$LOG_FILE"
WP_INSTALL_RESULT=$(sudo -u "$USER" wp core install \
    --url="https://$DOMAIN" \
    --title="$TITLE" \
    --admin_user="$ADMIN_USER" \
    --admin_password="$ADMIN_PASS" \
    --admin_email="$ADMIN_EMAIL" \
    --skip-email \
    --allow-root --path="$WEB_PATH" 2>&1)

if [ $? -ne 0 ]; then
    echo "Error: Failed to install WordPress: $WP_INSTALL_RESULT" >> "$LOG_FILE"
    echo "Error: Failed to install WordPress"
    exit 1
fi

echo "WordPress installed successfully" >> "$LOG_FILE"

# Установка базовых настроек
echo "Configuring WordPress settings..." >> "$LOG_FILE"
sudo -u "$USER" wp option update timezone_string 'Europe/Kiev' --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp option update date_format 'd.m.Y' --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp option update time_format 'H:i' --allow-root --path="$WEB_PATH" >/dev/null 2>&1

# Устанавливаем структуру постоянных ссылок
echo "Setting permalink structure..." >> "$LOG_FILE"
sudo -u "$USER" wp rewrite structure '/%postname%/' --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp rewrite flush --allow-root --path="$WEB_PATH" >/dev/null 2>&1

# Удаление демо-контента
sudo -u "$USER" wp post delete 1 --force --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp post delete 2 --force --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp comment delete 1 --force --allow-root --path="$WEB_PATH" >/dev/null 2>&1

# Получаем активную тему
ACTIVE_THEME=$(sudo -u "$USER" wp theme status --allow-root --path="$WEB_PATH" | grep "Active:" | awk '{print $2}' 2>/dev/null)
echo "Active theme: $ACTIVE_THEME" >> "$LOG_FILE"

# Удаляем все неактивные темы
echo "Removing inactive themes..." >> "$LOG_FILE"
INSTALLED_THEMES=$(sudo -u "$USER" wp theme list --status=inactive --field=name --allow-root --path="$WEB_PATH" 2>/dev/null)
if [ -n "$INSTALLED_THEMES" ]; then
    for theme in $INSTALLED_THEMES; do
        if [ "$theme" != "$ACTIVE_THEME" ]; then
            sudo -u "$USER" wp theme delete "$theme" --allow-root --path="$WEB_PATH" >/dev/null 2>&1
        fi
    done
fi

# Удаляем все плагины
echo "Removing all plugins..." >> "$LOG_FILE"
INSTALLED_PLUGINS=$(sudo -u "$USER" wp plugin list --field=name --allow-root --path="$WEB_PATH" 2>/dev/null)
if [ -n "$INSTALLED_PLUGINS" ]; then
    for plugin in $INSTALLED_PLUGINS; do
        sudo -u "$USER" wp plugin deactivate "$plugin" --allow-root --path="$WEB_PATH" >/dev/null 2>&1
        sudo -u "$USER" wp plugin delete "$plugin" --allow-root --path="$WEB_PATH" >/dev/null 2>&1
    done
fi

# Очистка кешей
sudo -u "$USER" wp transient delete --all --allow-root --path="$WEB_PATH" >/dev/null 2>&1
sudo -u "$USER" wp cache flush --allow-root --path="$WEB_PATH" >/dev/null 2>&1

# Копирование кастомных плагинов
CUSTOM_PLUGINS_SOURCE="/root/schemas/wp/plugins"
PLUGINS_DESTINATION="/home/$USER/web/$DOMAIN/public_html/wp-content/plugins"

if [ -d "$CUSTOM_PLUGINS_SOURCE" ]; then
    echo "Copying custom plugins..." >> "$LOG_FILE"
    cp -r "$CUSTOM_PLUGINS_SOURCE"/* "$PLUGINS_DESTINATION/" 2>/dev/null
    
    if [ $? -eq 0 ]; then
        chown -R "$USER":"$USER" "$PLUGINS_DESTINATION"
        find "$PLUGINS_DESTINATION" -type d -exec chmod 755 {} \;
        find "$PLUGINS_DESTINATION" -type f -exec chmod 644 {} \;
        
        # Активируем плагины
        for plugin_dir in "$PLUGINS_DESTINATION"/*; do
            if [ -d "$plugin_dir" ]; then
                plugin_name=$(basename "$plugin_dir")
                sudo -u "$USER" wp plugin activate "$plugin_name" --allow-root --path="$WEB_PATH" >/dev/null 2>&1
            fi
        done
    fi
fi

# Установка прав доступа
echo "Setting file permissions..." >> "$LOG_FILE"
chown -R "$USER":"$USER" "$WEB_PATH"
find "$WEB_PATH" -type d -exec chmod 755 {} \;
find "$WEB_PATH" -type f -exec chmod 644 {} \;
chmod 600 "$WEB_PATH/wp-config.php"

# Финальная проверка установки
if [ ! -f "$WEB_PATH/wp-config.php" ]; then
    echo "Error: wp-config.php not found after installation"
    exit 1
fi

if [ ! -d "$WEB_PATH/wp-admin" ]; then
    echo "Error: wp-admin directory not found"
    exit 1
fi

echo "WordPress installation completed successfully for $DOMAIN" >> "$LOG_FILE"
echo "OK"
exit 0